@model EntityLayer.Concrete.TestiMonials
@{
    ViewData["Title"] = "EditTestiMonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="card-header border-0">
    <h3 class="mb-0">Referans Detay Sayfası </h3>
    <form class="form-group" method="post">
        @Html.HiddenFor(x=>x.TestiMonialsID)
        <div class="form-group">
            @Html.Label("Başlık")
            @Html.TextBoxFor(x=>x.Title, new{@class = "form-control"})
        </div>
       
        <div class="form-group">
            @Html.Label("Referans Adı")
            @Html.TextBoxFor(x=>x.ClientName, new{@class = "form-control"})
        </div>
        <div class="form-group">
            @Html.Label("Şirket")
            @Html.TextBoxFor(x=>x.Company, new{@class = "form-control"})
        </div>
        <div class="form-group">
            @Html.Label("Referans Adı")
            @Html.TextBoxFor(x=>x.ClientName, new{@class = "form-control"})
        </div>
        <div class="form-group">
            @Html.Label("Görsel Yolu")
            @Html.TextBoxFor(x=>x.ImageUrl, new{@class = "form-control"})
        </div>
        <div class="form-group">
            @Html.Label("Yorumu")
            @Html.TextAreaFor(x=>x.Comments,3,2, new{@class = "form-control"})
        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
        <button class="btn btn-dark"> İptal </button>
    </form>
</div>
