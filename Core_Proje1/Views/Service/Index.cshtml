@model List<EntityLayer.Concrete.Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
!-- Card header -->
<div class="card-header border-0">
    <h3 class="mb-0">Hizmetlerim Listesi</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Başlık</th>
                <th scope="col" class="sort" data-sort="status">Tarih</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.ServiceID</th>
                    <td class="budget">
                        @item.Title
                    </td>
                    <td><a href="#" class="btn btn-danger" onclick="ConfirmDelete(@item.ServiceID)">Sil</a></td>
                    <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-info">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Service/AddService" class="btn btn-outline-primary">Yeni Hizmet Ekle</a>
</div>
<script>
    function ConfirmDelete(itemid)
    {
        if (confirm("Silmek istediğinize Emin Misiniz ?"))
        {
            window.location.href = "/Service/DeleteService/" + itemid
        }
        {
            return false;
        }
    }
</script>