@model List<EntityLayer.Concrete.AuthorMessage>
@{
    ViewData["Title"] = "ReceiverMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Mesajlar</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Gönderen</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Mesajları Gör</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.SenderName</td>
                                <td>@item.Subject</td>
                                <td>@item.Date.ToShortDateString()</td>
                                <td><a onclick="confirmDelete(@item.ID)" class="btn btn-outline-danger"> Sil </a> </td>
                                <td>@item.MessageContent</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a asp-action="AdminMessageAdd" class="btn btn-outline-primary">Yeni Mesaj Oluştur</a>
        </div>
    </div>
</div>
<script>
    function confirmDelete(itemid) {
        if (confirm("Silmek istediğinize emin misiniz?")) {
            window.location.href = "/AdminMessage/DeleteMessage/" + itemid
        }
        else {
            return false;
        }
    }
</script>
