@using EntityLayer.Concrete;
@model Experiance
@{
    ViewData["Title"] = "UpdateExperiance";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<h1>UpdateExperiance</h1>
<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Güncelleme Sayfası</h3>
    @using (Html.BeginForm("UpdateExperiance", "Experiance", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.ExperianceID)
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <p class="card-description">Deneyim Güncelle </p>
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" name="Name" value="@Model.Name" placeholder="Başlık">
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        <input type="text" class="form-control" name="Date" placeholder="Tarih" value="@Model.Date.ToShortDateString()">
                    </div>
                    <div class="form-group">
                        <label>ImageUrl</label>
                        <input type="text" class="form-control" name="ImageUrl" placeholder="Resim Yolu" value="@Model.ImageUrl">
                    </div>
                    <div class="form-group">
                        <label>Acıklama</label>
                        <textarea class="form-control" name="Description" rows="6" >@Model.Description</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                    <button class="btn btn-dark">İptal</button>
                </div>
            </div>
        </div>
    }
</div>

