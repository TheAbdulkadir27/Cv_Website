@model EntityLayer.Concrete.AuthorMessage
@{
    ViewData["Title"] = "ReceiverMessageDetails";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<h1>ReceiverMessageDetails</h1>
<form class="form-group">
    @Html.HiddenFor(x => x.ID)
    @Html.Label("Gönderen Adı")
    @Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control" })
    <br />
    @Html.Label("Gönderen Mail")
    @Html.TextBoxFor(x => x.Receiver, new{ @class = "form-control" })
    <br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control" })
</form>


